<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".ui.saved.SavedFragment">

    <SearchView
        android:id="@+id/searchView_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:layout_marginTop="@dimen/component_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_countries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/component_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin" />

    <TextView
        android:id="@+id/textView_notFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_sad"
        android:text="@string/country_not_found_title"/>
</LinearLayout>